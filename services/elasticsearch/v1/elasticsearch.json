        "properties": {
          "description": {
            "type": "string"
          },
          "state": {
            "enum": [
              "in progress",
              "succeeded",
              "failed"
            ],
            "type": "string"
          },
          "type": {
            "enum": [
              "create",
              "update",
              "delete"
            ],
            "type": "string"
          }
        },
        "required": [
          "state",
          "type",
          "description"
        ],
        "type": "object"
      },
      "InstanceParameters": {
        "properties": {
          "enable_monitoring": {
            "default": false,
            "type": "boolean"
          },
          "graphite": {
            "description": "If you want to monitor your service with Graphite, you can set the custom parameter graphite. It expects the host and port where the Graphite metrics should be sent to.",
            "example": "yourspace.your-graphite-endpoint.com:12345",
            "type": "string"
          },
          "max_disk_threshold": {
            "default": 80,
            "description": "This component monitors ephemeral and persistent disk usage. If one of these disk usages reaches the default configured threshold of 80%, the a9s Parachute stops all processes on that node.",
            "example": 90,
            "type": "integer"
          },
          "metrics_frequency": {
            "default": 10,
            "description": "Frequency of metrics being emitted in seconds",
            "type": "integer"
          },
          "metrics_prefix": {
            "description": "Depending on your graphite provider, you might need to prefix the metrics with a certain value, like an API key for example.",
            "example": "my-prefix",
            "type": "string"
          },
          "monitoring_instance_id": {
            "type": "string"
          },
          "plugins": {
            "description": "The plugins repository-s3 and repository-azure are enabled by default and cannot be disabled.",
            "items": {
              "enum": [
                "repository-s3",
                "repository-azure",
                "analysis-phonetic"
              ],
              "type": "string"
            },
            "type": "array"
          },
          "sgw_acl": {
            "description": "Comma separated list of IP networks in CIDR notation which are allowed to access this instance.",
            "example": "0.0.0.0/0",
            "type": "string"
          },
          "ssl_session_timeout": {
            "default": "24h",
            "description": "The content follows the nginx configuration file measurement units.",
            "example": "4h",
            "type": "string"
          },
          "syslog": {
            "example": [
              "logs4.your-syslog-endpoint.com:54321"
            ],
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "InstanceSchema": {
        "properties": {
          "create": {
