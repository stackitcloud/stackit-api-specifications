{
  "components": {
    "schemas": {
      "Backup": {
        "properties": {
          "createdAt": {
            "example": "2020-09-10T10:15:00Z",
            "type": "string"
          },
          "expireAt": {
            "example": "2020-09-13T10:15:00Z",
            "type": "string"
          },
          "id": {
            "example": "001c372f-5c15-418d-b2fb-b1f93ea2ffc8",
            "type": "string"
          },
          "lastRestoredAt": {
            "example": "2021-02-22T12:18:42Z",
            "type": "string"
          },
          "name": {
            "example": "Daily Backup",
            "type": "string"
          },
          "size": {
            "example": 55,
            "type": "integer"
          },
          "status": {
            "enum": [
              "creating",
              "available",
              "deleting",
              "error",
              "restoring",
              "error_deleting",
              "backing up",
              "inconsistent",
              "error-creating"
            ],
            "example": "available",
            "type": "string"
          },
          "volumeBackups": {
            "items": {
              "properties": {
                "id": {
                  "type": "string"
                },
                "lastRestoredAt": {
                  "type": "string"
                },
                "lastRestoredVolumeId": {
                  "type": "string"
                },
                "size": {
                  "type": "integer"
                },
                "status": {
                  "enum": [
                    "creating",
                    "available",
                    "deleting",
                    "error",
                    "restoring",
                    "error_deleting",
                    "error-creating"
                  ],
                  "type": "string"
                },
                "volumeId": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          }
        },
        "required": [
          "id",
          "name",
          "createdAt",
          "expireAt",
          "status"
        ],
        "type": "object"
      },
      "BackupJob": {
        "properties": {
          "id": {
            "example": "001c372f-5c15-418d-b2fb-b1f93ea2ffc8",
            "type": "string"
          }
        },
        "required": [
          "id"
        ],
        "type": "object"
      },
      "BackupProperties": {
        "properties": {
          "name": {
            "description": "Max 255 characters",
            "example": "Daily Backup",
            "type": "string"
          },
          "retentionPeriod": {
            "description": "Values are set in days (1-36500)",
            "example": 3,
            "maximum": 36500,
            "minimum": 1,
            "type": "integer"
          },
          "volumeIds": {
            "example": [
              "58335311-6acf-46c5-8652-cb96cd63181e",
              "38345f49-047b-437d-83a1-458f04fa3182"
            ],
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "name",
          "retentionPeriod"
        ],
        "type": "object"
      },
      "BackupSchedule": {
        "properties": {
          "backupProperties": {
            "$ref": "#/components/schemas/BackupProperties"
          },
          "enabled": {
            "example": true,
            "type": "boolean"
          },
          "id": {
            "example": 1480,
            "type": "integer"
          },
          "name": {
            "example": "Daily Schedule",
            "type": "string"
          },
          "rrule": {
            "example": "DTSTART;TZID=Europe/Sofia:20200803T023000 RRULE:FREQ=DAILY;INTERVAL=1",
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "rrule",
          "enabled"
        ],
        "type": "object"
      },
      "CreateBackupPayload": {
        "properties": {
          "name": {
            "description": "Max 255 characters",
            "example": "Daily Backup",
            "type": "string"
          },
          "retentionPeriod": {
            "description": "Values are set in days (1-36500)",
            "example": 3,
            "maximum": 36500,
            "minimum": 1,
            "type": "integer"
          },
          "volumeIds": {
            "example": [
              "58335311-6acf-46c5-8652-cb96cd63181e",
              "38345f49-047b-437d-83a1-458f04fa3182"
            ],
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "name",
          "retentionPeriod"
        ],
        "type": "object"
      },
      "CreateBackupSchedulePayload": {
        "properties": {
          "backupProperties": {
            "$ref": "#/components/schemas/BackupProperties"
          },
          "enabled": {
            "example": true,
            "type": "boolean"
          },
          "name": {
            "description": "Max 255 characters",
            "example": "Daily Schedule",
            "type": "string"
          },
          "rrule": {
            "example": "DTSTART;TZID=Europe/Sofia:20200803T023000 RRULE:FREQ=DAILY;INTERVAL=1",
            "type": "string"
          }
        },
        "required": [
          "name",
          "rrule",
          "enabled"
        ],
        "type": "object"
      },
      "EnableServicePayload": {
        "properties": {
          "backupPolicyId": {
            "format": "uuid",
            "type": "string"
          }
        },
        "type": "object"
      },
      "EnableServiceResourcePayload": {
        "properties": {
          "backupPolicyId": {
            "format": "uuid",
            "type": "string"
          }
        },
        "type": "object"
      },
      "GetBackupSchedulesResponse": {
        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/BackupSchedule"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "GetBackupsListResponse": {
        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/Backup"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "RestoreBackupPayload": {
        "properties": {
          "startServerAfterRestore": {
            "example": false,
            "type": "boolean"
          },
          "volumeIds": {
            "example": [
              "58335311-6acf-46c5-8652-cb96cd63181e",
              "38345f49-047b-437d-83a1-458f04fa3182"
            ],
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "startServerAfterRestore"
        ],
        "type": "object"
      },
      "RestoreVolumeBackupPayload": {
        "properties": {
          "restoreVolumeId": {
            "example": "69c2ae70-5bf9-4353-8ac6-2bc2ff0ba78e",
            "type": "string"
          }
        },
        "required": [
          "restoreVolumeId"
        ],
        "type": "object"
      },
      "UpdateBackupSchedulePayload": {
        "properties": {
          "backupProperties": {
            "$ref": "#/components/schemas/BackupProperties"
          },
          "enabled": {
            "example": true,
            "type": "boolean"
          },
          "name": {
            "description": "Max 255 characters",
            "example": "Daily Schedule",
            "type": "string"
          },
          "rrule": {
            "example": "DTSTART;TZID=Europe/Sofia:20200803T023000 RRULE:FREQ=DAILY;INTERVAL=1",
            "type": "string"
          }
        },
        "required": [
          "name",
          "rrule",
          "enabled"
        ],
        "type": "object"
      }
    }
  },
