      "Backup": {
        "properties": {
          "createdAt": {
            "example": "2020-09-10T10:15:00Z",
            "type": "string"
          },
          "expireAt": {
            "example": "2020-09-13T10:15:00Z",
            "type": "string"
          },
          "id": {
            "example": "001c372f-5c15-418d-b2fb-b1f93ea2ffc8",
            "type": "string"
          },
          "lastRestoredAt": {
            "example": "2021-02-22T12:18:42Z",
            "type": "string"
          },
          "name": {
            "example": "Daily Backup",
            "type": "string"
          },
          "size": {
            "example": 55,
            "format": "int32",
            "type": "integer"
          },
          "status": {
            "enum": [
              "in-progress",
              "inconsistent",
              "available",
              "error",
              "error-restoring",
              "error-creating",
              "error-deleting",
              "unrecognized"
            ],
            "example": "available",
            "type": "string"
          },
          "volumeBackups": {
            "items": {
              "properties": {
                "id": {
                  "type": "string"
                },
                "lastRestoredAt": {
                  "type": "string"
                },
                "lastRestoredVolumeId": {
                  "type": "string"
                },
                "size": {
                  "format": "int32",
                  "type": "integer"
                },
                "status": {
                  "enum": [
                    "available",
                    "creating",
                    "deleting",
                    "error-deleting",
                    "error",
                    "error-restoring",
                    "restoring",
                    "error-creating",
                    "unrecognized"
                  ],
                  "type": "string"
                },
                "volumeId": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          }
        },
        "required": [
          "id",
          "name",
          "createdAt",
          "expireAt",
          "status"
        ],
        "type": "object"
      },
