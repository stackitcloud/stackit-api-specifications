{
  "components": {
    "schemas": {
      "BackupProperties": {
        "properties": {
          "name": {
            "description": "Max 255 characters",
            "example": "Daily Backup",
            "type": "string"
          },
          "retentionPeriod": {
            "description": "Values are set in days (1-36500)",
            "example": 3,
            "format": "int32",
            "maximum": 36500,
            "minimum": 1,
            "type": "integer"
          },
          "volumeIds": {
            "example": [
              "58335311-6acf-46c5-8652-cb96cd63181e",
              "38345f49-047b-437d-83a1-458f04fa3182"
            ],
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "name",
          "retentionPeriod"
        ],
        "type": "object"
      },
      "CreateUpdatePayload": {
        "properties": {
          "backupBeforeUpdate": {
            "type": "boolean"
          },
          "backupProperties": {
            "$ref": "#/components/schemas/BackupProperties"
          },
          "maintenanceWindow": {
            "format": "int32",
            "maximum": 24,
            "minimum": 1,
            "type": "integer"
          }
        },
        "required": [
          "maintenanceWindow"
        ],
        "type": "object"
      },
      "CreateUpdateSchedulePayload": {
        "properties": {
          "enabled": {
            "example": true,
            "type": "boolean"
          },
          "id": {
            "example": 1480,
            "format": "int32",
            "type": "integer"
          },
          "maintenanceWindow": {
            "format": "int32",
            "maximum": 24,
            "minimum": 1,
            "type": "integer"
          },
          "name": {
            "example": "Daily Schedule",
            "type": "string"
          },
          "rrule": {
            "example": "DTSTART;TZID=Europe/Sofia:20200803T023000 RRULE:FREQ=DAILY;INTERVAL=1",
            "type": "string"
          }
        },
        "required": [
          "name",
          "rrule",
          "enabled",
          "maintenanceWindow"
        ],
        "type": "object"
      },
      "EnableServicePayload": {
        "properties": {
          "updatePolicyId": {
            "format": "uuid",
            "type": "string"
          }
        },
        "type": "object"
      },
      "EnableServiceResourcePayload": {
        "properties": {
          "updatePolicyId": {
            "format": "uuid",
            "type": "string"
          }
        },
        "type": "object"
      },
      "GetUpdatePoliciesResponse": {
        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/UpdatePolicy"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "GetUpdateSchedulesResponse": {
        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/UpdateSchedule"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "GetUpdateServiceResponse": {
        "properties": {
          "enabled": {
            "type": "boolean"
          }
        },
        "type": "object"
      },
      "GetUpdatesListResponse": {
        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/Update"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "Update": {
        "properties": {
          "endDate": {
            "example": "2020-09-13T10:15:00Z",
            "type": "string"
          },
          "failReason": {
            "type": "string"
          },
          "failedUpdates": {
            "example": 55,
            "format": "int32",
            "type": "integer"
          },
          "id": {
            "example": 100,
            "format": "int32",
            "type": "integer"
          },
          "installedUpdates": {
            "example": 55,
            "format": "int32",
            "type": "integer"
          },
          "startDate": {
            "example": "2020-09-10T10:15:00Z",
            "type": "string"
          },
          "status": {
            "example": "running",
            "type": "string"
          }
        },
        "required": [
          "id",
          "startDate",
          "status"
        ],
        "type": "object"
      },
      "UpdatePolicy": {
        "properties": {
          "default": {
            "example": true,
            "type": "boolean"
          },
          "description": {
            "example": "Default Daily Backup Schedule",
            "type": "string"
          },
          "enabled": {
            "example": true,
            "type": "boolean"
          },
          "id": {
            "example": "a01c372f-5c15-418d-b2fb-b1f93ea2ffc8",
            "type": "string"
          },
          "maintenanceWindow": {
            "example": 3,
            "type": "integer"
          },
          "name": {
            "example": "Default Backup Schedule",
            "type": "string"
          },
          "rrule": {
            "example": "DTSTART;TZID=Europe/Sofia:20200803T023000 RRULE:FREQ=DAILY;INTERVAL=1",
            "type": "string"
          }
        }
      },
      "UpdateSchedule": {
        "properties": {
          "enabled": {
            "example": true,
            "type": "boolean"
          },
          "id": {
            "example": 1480,
            "format": "int32",
            "type": "integer"
          },
          "maintenanceWindow": {
            "format": "int32",
            "maximum": 24,
            "minimum": 1,
            "type": "integer"
          },
          "name": {
            "example": "Daily Schedule",
            "type": "string"
          },
          "rrule": {
            "example": "DTSTART;TZID=Europe/Sofia:20200803T023000 RRULE:FREQ=DAILY;INTERVAL=1",
            "type": "string"
          }
        },
        "required": [
          "name",
          "rrule",
          "enabled",
          "maintenanceWindow"
        ],
        "type": "object"
      },
      "UpdateUpdateSchedulePayload": {
        "properties": {
          "enabled": {
            "example": true,
            "type": "boolean"
          },
          "id": {
            "example": 1480,
            "format": "int32",
            "type": "integer"
          },
          "maintenanceWindow": {
            "format": "int32",
            "maximum": 24,
            "minimum": 1,
            "type": "integer"
          },
          "name": {
            "example": "Daily Schedule",
            "type": "string"
          },
          "rrule": {
            "example": "DTSTART;TZID=Europe/Sofia:20200803T023000 RRULE:FREQ=DAILY;INTERVAL=1",
            "type": "string"
          }
        },
        "required": [
          "name",
          "rrule",
          "enabled",
          "maintenanceWindow"
        ],
        "type": "object"
      }
    }
  },
