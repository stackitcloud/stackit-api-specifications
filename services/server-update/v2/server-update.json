          "maintenanceWindow": {
            "description": "Updates start within the defined hourly window. Depending on the updates, the process may exceed this timeframe and require an automatic restart.",
            "format": "int32",
            "maximum": 24,
            "minimum": 1,
            "type": "integer"
          }
        },
        "required": [
          "maintenanceWindow"
        ],
        "type": "object"
      },
